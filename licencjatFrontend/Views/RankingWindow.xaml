<Window x:Class="licencjatFrontend.Views.RankingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ranking schronisk" Height="400" Width="600">

    <Window.Resources>
        <!-- Styl dla DataGridRow z obsługą IsMouseOver -->
        <Style TargetType="DataGridRow">
            <Style.Setters>
                <Setter Property="Background" Value="#D3F9D8"/>
                <!-- Kolor tła wierszy (jasny zielony) -->
            </Style.Setters>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True">
                    <Setter Property="Background" Value="#A0D5A9"/>
                    <!-- Kolor tła wiersza przy najechaniu (cięższy zielony) -->
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla nagłówka tabeli -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2E8B57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Styl dla wierszy DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="DarkGreen"/>
        </Style>

    </Window.Resources>

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding RankingResults}" AutoGenerateColumns="False"
                  CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa schroniska" Binding="{Binding Hostel.Name}" Width="*" />
                <DataGridTextColumn Header="Wynik" Binding="{Binding Result, StringFormat=F3}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
